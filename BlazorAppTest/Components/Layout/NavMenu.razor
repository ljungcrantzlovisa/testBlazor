@* NavMenu.razor *@
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorAppTest</a>
        <button class="navbar-toggler" @onclick="ToggleMenu">
            ☰
        </button>
    </div>
</div>

<div class="nav-scrollable" style="@(isMenuOpen ? "display:block;" : "display:none;")">
    <nav class="nav flex-column">
        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
            <span class="bi bi-house-door-fill"></span> Students
        </NavLink>

        <NavLink class="nav-link" href="counter">
            <span class="bi bi-plus-square-fill"></span> Counter
        </NavLink>

        <NavLink class="nav-link" href="weather">
            <span class="bi bi-list-nested"></span> Weather
        </NavLink>
    </nav>
</div>

@code {
    private bool isMenuOpen = false;

    private void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
    }
}
